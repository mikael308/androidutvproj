<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/events_listitem_info_padding_left"
    android:paddingTop="@dimen/events_listitem_info_padding_top"
    android:paddingRight="@dimen/events_listitem_info_padding_right"
    android:paddingBottom="@dimen/events_listitem_info_padding_bottom"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="left"
        android:text="header"
        android:id="@+id/header"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:paddingLeft="18dp"
        android:text="Small Text"
        android:id="@+id/description"
        android:layout_gravity="center_horizontal" />

</LinearLayout>