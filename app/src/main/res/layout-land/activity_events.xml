<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:weightSum="3"
    android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        layout="@layout/layout_selector"
        android:layout_gravity="center_horizontal"
        android:id="@+id/fragment_selector_list"/>

    <fragment android:name="com.example.mikael.androidutvproj.display.DisplayFragment"
        android:id="@+id/fragment_display_view"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent" />


</LinearLayout>